<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <RootNamespace>Bonzai</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Bonzai</PackageId>
        <Title>Bonzai</Title>
        <Authors>Kai Averkvist</Authors>
        <Description>A really simple Websocket library based on Fleck that implements strongly typed message routing.</Description>
        <Copyright>Kai Averkvist</Copyright>
        <PackageProjectUrl>https://github.com/kaiaverkvist/Bonzai</PackageProjectUrl>
        <RepositoryUrl>https://github.com/kaiaverkvist/Bonzai</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>websocket, bonzai, fleck, library, messages, ws</PackageTags>
        <AssemblyName>Bonzai</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Fleck" Version="1.2.0" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    </ItemGroup>

</Project>
